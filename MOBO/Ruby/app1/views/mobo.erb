    </div>
    
		<div id="navigation">
			<table border="0" width="100%">
				<tbody>
					<tr>
						<td width="20%" valign="top" class="label">Address:</td>
						<td class="cell">
							<input name="address" type="text" maxlength="100" id="phoneTextBox" value='<%= params[:address] %>'style="width:291px;" />     
						</td>
					</tr> 
					<tr>
						<td valign="top" class="label">Message:</td>
						<td class="cell">
							<textarea name="message" rows="2" cols="20" id="messageTextBox" style="height:99px;width:291px;"><%= params[:message]%></textarea>
					</td>
					</tr>
					<tr>
						<td valign="top" class="label">Subject:</td>
						<td class="cell">
							<textarea name="subject" rows="2" cols="20" id="subjectTextBox" style="height:99px;width:291px;"><%= params[:subject]%></textarea>
						</td>
					</tr>
					<tr>
						<td valign="top" class="label">Group:</td>
						<td class="cell">
							<input name="groupCheckBox" value="true" type="checkbox" id="groupCheckBox"/></td>
                            <%= params[:groupCheckBox] %>
					</tr>
				</tbody>
			</table>
		</div>

		<div id="extraleft">
			<div class="warning" >
				<strong>WARNING:</strong><br />
				total size of all attachments cannot exceed 600 KB.
			</div>
		</div>

		<div id="extra">
			<table border="0" width="100%">
				<tbody>
					<tr>
						<td valign="bottom" class="style1">Attachment 1:</td>
							<td class="cell">
								<input type="file" name="f1" />
							</td>
						</tr>
						<tr>
							<td valign="bottom" class="style1">Attachment 2:</td>
								<td class="cell">
                                    <input type="file" name="f2" />
							</td>
                        </tr>
                        <tr>
    						<td valign="bottom" class="style1">Attachment 3:</td>
								<td class="cell">
                                    <input type="file" name="f3" />
							</td>
                        </tr>
                        <tr>
    						<td valign="bottom" class="style1">Attachment 4:</td>
								<td class="cell">
                                    <input type="file" name="f4" />
							</td>
                        </tr>
                        <tr>
    						<td valign="bottom" class="style1">Attachment 5:</td>
								<td class="cell">
                                    <input type="file" name="f5" />
							</td>
                        </tr>
				</tbody>
			</table>
		
			<table>
				<tbody>
					<tr>
						<td>
							<input type="submit" name="sendMessages" value="Send Message" id="sendMessages" /></td>
					</tr>
				</tbody>
			</table>
		</div>
		
		<br clear="all" />
			<div align="center">
				<div id="sendMessagePanel" style="font-family:Calibri;font-size:XX-Small;">
			</div>
		</div>
      
		<% if @sms_send_error %>
			<div class="errorWide">
				<strong>ERROR:</strong><br/>
				<%= @sms_send_error %>
			</div>
			<br/>
		<% end %>
        
        <% if @mms_send_error %>
    		<div class="errorWide">
				<strong>ERROR:</strong><br/>
				<%= @mms_send_error %>
			</div>
			<br/>
		<% end %>
        
        <% if @error %>
    		<div class="errorWide">
			    <strong>ERROR:</strong>
			<br />
			<%= @error %>
		</div>
		<% end %>
        
        <% if @message_error %>
        	<div class="errorWide">
			    <strong>ERROR:</strong>
			<br />
			<%= @message_error %>
		</div>
		<% end %>

		<% if @sms_id %>
			<div class="successWide">
				<strong>SUCCESS:</strong><br/>
				Message ID: <%= @sms_id %>
			</div>
			<br/>
		<% end %>
        
        <% if @mms_id %>
			<div class="successWide">
				<strong>SUCCESS:</strong><br/>
				Message ID: <%= @mms_id %>
			</div>
			<br/>
		<% end %>
	
